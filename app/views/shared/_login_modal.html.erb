<div id="login" style="width: 400px" class="modal hide fade in" tabindex="-1" role="dialog" aria-labelledby="login" aria-hidden="false" >
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3>Login</h3>
  </div>
  <div class="modal-body">
    <%= form_for :user, url: new_user_session_path, html: {class: "form-horizontal loginFrm"},
          remote: true do |f| %>
      <p class="control-group hide" id="login-error">
        Incorrect email and password combination
      </p>
      <div class="control-group">
        <%= f.text_field :email %>
      </div>
      <div class="control-group">
        <%= f.password_field :password %>
      </div>
      <div class="control-group">
        <label class="checkbox">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </label>
      </div>
      <div class="control-group">
      <%= f.submit 'Sign in', class: "btn btn-success" %>
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      </div>
  <% end %>
  </div>
</div>
